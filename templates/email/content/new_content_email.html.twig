{% extends "email/layout.html.twig" %}

{% block main %}
  <div class="flex py-5 px-5 border-b hover:bg-neutral-200 dark:hover:bg-neutral-700 dark:border-neutral-600">
      <div class="w-full relative">
          <p class="font-normal text-sm mb-1.5 dark:text-neutral-400">
              {{ 'component.notification.new_content_available'|trans({ type: content.type.value }) }} <strong>{{ content.title|u.truncate(50, '...') }}</strong>
          </p>
          <div class="text-xs font-medium text-primary-700 dark:text-primary-400 flex justify-between">
              {# <a href="{{ url('app_content_show', { slug: content.slug, _locale: locale|default("en") }) }}">
                  {{ 'component.notification.read'|trans({ type: content.type.value }) }}
              </a> #}
          </div>
      </div>
  </div>
{% endblock %}