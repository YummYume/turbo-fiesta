{% trans_default_domain "admin" %}

{% component modal
    with
    {
        title: "page.user_delete.title"|trans,
        modalId: "delete-user-modal",
        openButtonText: "common.delete"|trans,
        openButtonClass: "text-neutral-100 bg-danger font-medium rounded-lg text-sm px-5 py-2.5",
        closeButtonText: "common.go_back"|trans,
        closeButtonClass: "text-neutral-100 bg-success font-medium rounded-lg text-sm px-5 py-2.5"
    }
%}
{% trans_default_domain "admin" %}

{% block content %}
    {{ "page.user_delete.content"|trans }} <strong class="text-danger">{{ "common.delete.cannot_be_undone"|trans }}</strong>
{% endblock %}

{% block modal_action %}
    {{ parent() }}
    {{ component("button", { id: "delete-user", content: "common.delete"|trans, submit: true, class: "!bg-danger" }) }}
{% endblock %}

{% block modal_box %}
    <form method="post" action="{{ path("admin_user_delete", { id: user.id.toBase32 }) }}">
        <input type="hidden" name="_token" value="{{ csrf_token("delete-" ~ user.id.toBase32) }}" />
        {{ parent() }}
    </form>
{% endblock %}
{% endcomponent %}
